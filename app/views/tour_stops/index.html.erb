
<table>
  <thread>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Next direction</th>
    </tr>
  </thread>
  <tbody>
    <% @tour_stops.each do |tour_stop| %>
      <tr>
        <td><%= tour_stop.id %></td>
        <td><%= tour_stop.name %></td>
        <td><%= tour_stop.description %></td>
        <td><%= tour_stop.location %></td>
        <td><%= tour_stop.next_direction %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag import_tour_stops_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
